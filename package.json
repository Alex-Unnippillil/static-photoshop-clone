{
  "name": "photoshop-clone",
  "version": "1.0.0",
  "private": true,
  "type": "module",

  "scripts": {
    "build": "tsc --noEmit && node -e \"const fs=require('fs');fs.rmSync('dist',{recursive:true,force:true});\" && esbuild src/index.ts --bundle --format=esm --target=es2020 --sourcemap --outdir=dist",
    "lint": "eslint 'src/**/*.{ts,tsx,js}'",
    "test": "jest"
  },

  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },

  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.3",
    "jest-environment-jsdom": "^29.7.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "esbuild": "^0.20.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "globals": {
      "ts-jest": {
        "useESM": true,
        "diagnostics": false
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
